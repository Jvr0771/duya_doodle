<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="yituSeekBar" parent="android:style/Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/seek_bar_style</item>
        <item name="android:maxHeight">2dip</item>
        <item name="android:minHeight">2dip</item>
        <item name="android:thumb">@drawable/canvas_size_thumb</item>
    </style>

    <style name="popup_window_style">
        <item name="android:windowEnterAnimation">@anim/pop_window_down</item>
        <item name="android:windowExitAnimation">@anim/pop_window_up</item>
    </style>

</resources>