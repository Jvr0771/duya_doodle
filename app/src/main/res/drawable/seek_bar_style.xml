<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0.0dip" >
            </corners>

            <gradient
                android:angle="270.0"
                android:centerColor="#9fc0df"
                android:centerY="0.75"
                android:endColor="#9fc0df"
                android:startColor="#9fc0df" >
            </gradient>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0.0dip" >
                </corners>

                <gradient
                    android:angle="270.0"
                    android:centerColor="#e9160a"
                    android:centerY="0.75"
                    android:endColor="#e9160a"
                    android:startColor="#e9160a" >
                </gradient>
            </shape>
        </clip>
    </item>

</layer-list>